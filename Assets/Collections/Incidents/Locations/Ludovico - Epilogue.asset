      OneShotSFX:
        Name: 
        Parameters: []
    - Text: "\"This is it. <i>\rArrivederci, Yvette.</i>\""
      Background: {fileID: 0}
      Character1:
        AvatarID: LudovicoSidotti
        Pose: neutral
        Name: Ludovico
      Character2:
        AvatarID: 
        Pose: 
        Name: 
      Speaker: 2
      Rewards: []
