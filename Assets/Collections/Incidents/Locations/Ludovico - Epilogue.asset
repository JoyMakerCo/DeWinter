        Name: 
        Parameters: []
      AmbientSFX:
        Name: 
        Parameters: []
      OneShotSFX:
        Name: event:/One Shot SFX/Male_bark_neutral
        Parameters: []
    - Text: '"I love you." He says, one last time before boarding his boat.'
      Background: {fileID: 0}
      Character1:
        AvatarID: LudovicoSidotti
        Pose: neutral
