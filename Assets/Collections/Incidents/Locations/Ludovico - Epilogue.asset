        Parameters: []
      OneShotSFX:
        Name: 
        Parameters: []
    - Text: '"I guess, this is goodbye."'
      Background: {fileID: 0}
      Character1:
        AvatarID: LudovicoSidotti
        Pose: sad
        Name: Ludovico
      Character2:
        AvatarID: 
